{
    "widgets":[
        {
            "name": "GardenServerWidget",
            "alias": "gsw"
        },
        {
            "name": "ComposterWidget",
            "alias": "cw"
        },
        {
            "name": "GardenVisitorsWidget",
            "alias": "vw"
        },
        {
            "name": "CameraPositionWidget",
            "alias": "cpw"
        },
        {
            "name": "SprayonatorWidget",
            "alias": "sw"
        }
    ],
    "layout": [
        {
            "op": "place",
            "where": "centerTop",
            "apply_to": ["sw"]
        },
        {
            "op": "stack",
            "direction": "vertical",
            "align": "top",
            "apply_to": ["gsw", "vw"]
        },
        {
            "op": "stack",
            "direction": "vertical",
            "align": "top",
            "apply_to": ["cw", "cpw"]
        },
        {
            "op": "align",
            "reference": "leftOfCenter",
            "apply_to": ["gsw", "vw"]
        },
        {
            "op": "align",
            "reference": "rightOfCenter",
            "apply_to": ["cw", "cpw"]
        },
        {
            "op": "collideAgainst",
            "direction": "bot",
            "widgets": ["gsw", "cw"],
            "colliders": ["sw"]
        },
        {
            "op": "collideAgainst",
            "direction": "bot",
            "widgets": ["vw", "cpw"],
            "colliders": ["gsw", "cw"]
        }
    ]
}